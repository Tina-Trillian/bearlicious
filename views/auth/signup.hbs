<div class="back-white">
  <div class="back-white-content">
    <h2>Signup</h2>

    <form class="my-4" action="/auth/signup" method="POST" id="form-container">
      <label for="username">Username</label>
      <input id="username" type="text" name="username" placeholder="JonSnow">

      <br><br>

      <label for="email">Email</label>
      <input id="email" type="email" name="email" placeholder="bastard@winterfell.sk">

      <br><br>

      <label for="password">Password</label>

      <input id="password" type="password" name="password" placeholder="Your password">

      <br><br> {{#if message }}
      <div class="error-message">{{ message }}</div>
      {{/if}}

      <br>

      <button class="btn btn-primary">Create account</button>

    </form>
    <p class="account-message">
      Do you already have an account?
      <a href="/auth/login">Login</a>
    </p>
    <p>
      Login with <a href="/auth/facebook">Facebook</a>
    </p>
  </div>

</div>