<div class="back-white">
  <div class="back-white-content">
    <h2>Login</h2>

    <form class="my-4" action="/auth/login" method="POST" id="form-container">
      <label for="email">Email</label>
      <input id="email" type="text" name="email" placeholder="bastard@winterfell.sk">

      <br><br>

      <label for="password">Password</label>
      <input id="password" type="password" name="password" placeholder="Your password">
      <br> {{#if message }}
      <div class="error-message">{{ message }}</div>
      {{/if}}

      <button class="mt-4 btn btn-primary">Login</button>

    </form>
     <p class="account-message">
        Don't have an account yet?
        <a href="/auth/login">Signup</a>
     </p>
  </div>
</div>