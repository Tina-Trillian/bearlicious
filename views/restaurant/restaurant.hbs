<div class="back-white">
  <div class="back-white-content restaurant">
    <div class="restaurant-image">
      <img src="{{restaurant.picPath}}" alt="" width="400">
    </div>
    <div class="restaurant-info my-3">
    <h3>{{restaurant.name}}</h3>
    <p>{{restaurant.address}}</p>
    <p>{{restaurant.phone}}</p>
    </div>
    <p class="hidden" id="each-res-location">{{ restaurant.location.coordinates}}</p>
    <div id="restaurant-map"></div>
    <div class="restaurant-info">
      <p>{{restaurant.description}}</p>
    </div>
    <div class="my-3">
    {{#each restaurant.category}}
    <a class="btn btn-primary btn-sm" href="/{{this}}" role="button">{{this}}</a>
    {{/each}} 
    </div>
    {{#if user}}
    <div>
      <form class="mt-3" action="/restaurant/{{restaurant._id}}" method="POST">
        <input type="text" name="userId" value="{{user._id}}" class="hidden"> {{#if bookmark}}
        <button class="on btn" type="submit">Remove Bookmark</button>
        {{else}}
        <button class="off btn" type="submit">Add Bookmark</button>
        {{/if}}
      </form>
    </div>
    {{/if}}
  </div>
</div>
  <div class="container-heading">
    <h4 class="headline-white">Recommendations</h4>
    <h4><a href="/foodie/{{user._id}}/recommendations/create/{{restaurant._id}}">Add or Edit a recommendation</a></h4>
  </div>
    <div class="back-white">
      {{#each restaurant.recommendation}}
      <div class="recommend-card">
      <p class="comment">{{this.comment}}</p>
      <p>by <a href="/foodie/profile/{{this.authorId}}"><i>{{this.author}}</i></a></p>
      <p><i><span id="created-on">created on: </i></span> <span class="updated_at hidden">{{this.updated_at}}</span></p>
      </div>
      {{/each}}
    
  </div>




