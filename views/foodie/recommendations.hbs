<h1>My Recommendations</h1>
<div class="bg-white">
  <h4><a href="/foodie/{{user._id}}/recommendations/search">(+) Add a recommendation</a></h4>
  {{#each restaurants}}
  <div class="restaurant-card">
    <a href="/restaurant/{{this._id}}"><h3>{{this.name}}</a></h3>
    <div class="restaurant-image">
      <img src="{{this.picPath}}" alt="">
    </div>
    <div class="restaurant-info">
      {{this.description}}
    </div>
    {{/each}}
  </div>
</div>